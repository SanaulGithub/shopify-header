<div class="header-9 header__mid pr pl__15 pr__15 {{settings.header_top_color}}{%- if settings.header_bg_image != blank %} lazyload{%- endif -%}"{%- if settings.header_bg_image != blank %} data-bgset="{%- include 'bgset', image: settings.header_bg_image -%}" data-sizes="auto" data-parent-fit="cover"{%- endif -%}>
   {%- if settings.full_header_enable == false -%}<div class="jas-container">{%- endif -%}   
      <div class="jas-row middle-xs">
         <div class="hide-md visible-sm visible-xs jas-col-sm-3 jas-col-xs-3 flex start-md flex nta_menu middle-xs">
            {%- include 'push_menu' -%}
         </div>
         <div class="jas-col-lg-2 jas-col-sm-2 jas-col-xs-6 start-lg center-sm center-xs jas_div_logo">
            {%- include 'logo_menu' -%}
         </div>
         <div class="jas-col-md-8 hidden-sm jas_div_nav">
            <div class="wrapper-search-full pr tc">
               <form role="search" method="get" class="pr searchform{%- if settings.ajax_search %} gecko-ajax-search{%- endif -%}" action="{{ routes.search_url }}">
                  <div>
                     <label class="screen-reader-text" for="q"></label>
                     <input type="text" placeholder="{{ 'general.search.placeholder' | t }}" value="{{ search.terms | escape }}" name="q" id="qfull9" autocomplete="off">
                     {%- if settings.only_search_products -%}<input type="hidden" name="type" value="product" />{%- endif -%}
                     <button type="submit" class="search_btn_sub" id="qfull9submit"></button>
                  </div>
               </form>
               <div class="search-results-wrapper tl">
                  <div class="gecko-search-results">
                     <ul class="ui-autocomplete ui-front ui-menu ui-widget ui-widget-content autocomplete-suggestions dn"></ul>
                  </div>
               </div>
            </div>
         </div>
         <div class="jas-col-sm-2 jas-col-xs-3 jas_div_action">
            <div class="jas-action flex end-xs middle-xs">
               {%- include 'jas_action' -%}
            </div><!-- .jas-action -->
         </div>
      </div>
      <!-- .jas-row -->
   {%- if settings.full_header_enable == false -%}</div><!-- .jas-container -->{%- endif -%}

   <div class="header__bottom hidden-sm">
     <div class="jas-container">
      <div class="jas-row">
         {%- if settings.cat_h9 -%}
         <div class="jas-col-xs-3">{%- section 'cat_menu' -%}</div>
         <div class="jas-col-xs-9">
            <div class="jas-navigation flex">{%- section 'mega_menu' -%}</div><!-- .jas-navigation -->
         </div>
         {%- else -%}
         <div class="jas-col-xs-12">
            <div class="jas-navigation flex center-xs">{%- section 'mega_menu' -%}</div><!-- .jas-navigation -->
         </div>
         {%- endif -%}
      </div>
      </div><!-- .jas-container -->
   </div> 
</div>